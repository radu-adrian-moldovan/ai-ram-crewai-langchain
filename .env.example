# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2-vision

# MCP Configuration
MCP_SERVER_URL=http://localhost:3000

# Document Processing
TESSERACT_CMD=/opt/homebrew/bin/tesseract  # Adjust path for your system
CONFIDENCE_THRESHOLD=0.85

# Sample Processing
SAMPLES_INPUT_DIR=samples/input
SAMPLES_OUTPUT_DIR=samples/output
BATCH_SIZE=5  # Number of documents to process in parallel

# Optional: Logging Level
LOG_LEVEL=INFO

# Optional: Performance Settings
MAX_PROCESSING_TIME=30  # Maximum time per document in seconds
ENABLE_PARALLEL_PROCESSING=true
